<% current_time = Time.now %>
<% active_table_for :category_table, @active_table_output,
                    :refresh_url => url_for(:action => 'category_table', :path => @blog.id),
                    :class => 'active_table',
                    :actions => [ [ 'Delete', 'delete', 'Are you sure you want to permantently delete the selected category?' ] ],
                    :update => 'category_table' do |t| %>
<tr <%= highlight_row 'category',t.id %> >
  <td align='left' nowrap='1'><%= entry_checkbox "category", t.id %></td>
  <td><%= h  t.name %></td>
  <td align='right'><%= t.blog_posts_categories.length %></td>
</tr>


<% end -%>